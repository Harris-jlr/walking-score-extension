{
    "manifest_version": 3,
    "icons": {
      "16": "icons/cs_16.png",
      "48": "icons/cs_48.png",
      "128": "icons/cs_128.png"
    },
    "name": "Credibility Score for Companies on LinkedIn",
    "version": "1.0",
    "description": "Overlay a Credibility Score for LinkedIn company profiles.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://www.linkedin.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/company/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "details.html",
      "default_icon": {
        "16": "icons/cs_16.png",
        "48": "icons/cs_48.png",
        "128": "icons/cs_128.png"
      }
    }
  }
  